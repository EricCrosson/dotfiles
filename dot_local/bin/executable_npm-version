#!/usr/bin/env bash
#
# Print the currently-installed version of the specified npm package.
#
# Usage:
#  npm-version <package-name>
#
# @example
# npm-version fp-ts

set -o errexit
set -o nounset
set -o pipefail

__dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
readonly __dir
# required to add ./docopts to PATH
PATH="${PATH}:${__dir}"
# shellcheck source=./docopts.sh
source "${__dir}/docopts.sh" --auto "$@"
# shellcheck disable=SC2119
# docopt_print_ARGS

node -e "console.log(require('${ARGS[<package-name>]}/package.json').version)"
